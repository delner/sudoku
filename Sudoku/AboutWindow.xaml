<Window x:Class="Sudoku.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Sudoku"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Width="Auto"
        Height="Auto">
    <StackPanel Orientation="Horizontal" Background="Snow">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Border Padding="10" >
                <Image Width="72" Height="72" Source="/Sudoku;component/Content/icon_huge.png" />
            </Border>
        </StackPanel>
        <Border Padding="10">
            <StackPanel Orientation="Vertical">
                <Border HorizontalAlignment="Center">
                    <TextBlock Text="SUDOKU" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Foreground="#00a3EE" FontFamily="pack://application:,,,/Content/#Helvetica" />
                    
                </Border>
                <TextBlock Margin="0,10,0,0" Text="David Elner" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Margin="0,10,0,0" Text="delner@umich.edu" />
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
