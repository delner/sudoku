<UserControl x:Class="Sudoku.SudokuCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:Sudoku"
             mc:Ignorable="d">
    <TextBox x:Name="CellTextBox"
             Height="30"
             Width="30"
             TextAlignment="Center"
             FontFamily="pack://application:,,,/Content/#Helvetica"
             FontSize="20"
             MaxLines="1"
             AcceptsReturn="False"
             FontWeight="Bold"
             MouseEnter="CellTextBox_MouseEnter"
             MouseLeave="CellTextBox_MouseLeave"/>
</UserControl>
